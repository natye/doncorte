@{
    ViewData["Title"] = "All Books";
}
@model IEnumerable<BookModel>

<h3 class="display-4">All Books </h3>
<div class="container">
    <div class="row">

        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100" height="225" xml:space="http://www.unprofound.com/images/main2.jpg"></svg>
                    <h3>@book.Title</h3>
                    <p class="card-text">@book.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-controller="Book" asp-action ="getbook" asp-route-id="@book.Id" 
                           asp-route-NameBook="@book.Title" 
                           asp-fragment ="similarbooks"class="btn btn-sm btn-outline-secondary">View Details</a>
                    </div>
                    <small class=" text-muted">@book.Auther</small>

                </div>

            </div>
        }





    </div>

</div>