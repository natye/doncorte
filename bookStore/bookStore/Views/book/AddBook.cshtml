@model BookModel
    <div class="container">
        <h1 class="display-4">Add Books</h1>
        <form method="post" asp-action="AddBook" asp-controller="Book">
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>

                <textarea type="text" asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Category">Category</label>
                <input type="text" asp-for="Category" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Auther">Auther</label>
                <input type="text" asp-for="Auther" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TotalPage">TotalPage</label>
                <input type="text" asp-for="TotalPage" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn-primary" value="add book" />
            </div>

        </form>
    </div>